<h1>Welcome to the <%= @dojos.branch %> branch!</h1>
<h2> Details: </h2> <br>
Branch Name: <%= @dojos.branch %><br>
Street Name: <%= @dojos.street %><br>
City Name: <%= @dojos.city %><br>
State Name: <%= @dojos.state %>
<br>
<br>
<h2> Student Roster: </h2>

<table>
<thead>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Email</th>
    <th>Actions</th>
</thead>
<tbody>
<% @students.each do |student| %>
    <tr>
        <td><%= student.first_name %></td>
        <td><%= student.last_name %></td>
        <td><%= student.email %></td>
        <td><a href="/dojos/<%= @dojos.id %>/students/<%= student.id %>">SHOW</a></td>
        <td>
        <form action="/dojos/<%= @dojos.id %>/students/<%= student.id %>" method="post">
        <input type="hidden" name="_method" value="delete">
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
        <input type="submit" value="Delete">
        </td>
    </tr>
<% end %>		
</tbody>
</table>

<a href="/dojos/<%= @dojos.id %>/students/new"> Add New Student </a>

    


